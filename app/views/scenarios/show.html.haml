= subscribe_to "/scenarios/#{@scenario.id}"
= javascript 'scenario_show.js'
%div#scenario{data: {id: @scenario.id}}
  %p
    %b Name:
    = @scenario.name
  %p
    %b description
    = @scenario.description

= link_to 'Boot', boot_scenario_path(@scenario)
%h3 Clouds
- @scenario.clouds.each do |cloud|
  = link_to cloud.name, cloud_path(cloud)
  %br
%h3 Console Log
%pre#console


= link_to 'Edit', edit_scenario_path(@scenario)
\|
= link_to 'Back', scenarios_path
